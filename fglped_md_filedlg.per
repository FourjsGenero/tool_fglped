    [ei  |entry              |esize      |emodt             |etype ]
    [ei  |entry              |esize      |emodt             |etype ]
    [ei  |entry              |esize      |emodt             |etype ]
    [ei  |entry              |esize      |emodt             |etype ]
    [ei  |entry              |esize      |emodt             |etype ]
