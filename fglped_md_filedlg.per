--  [" "]

ATTRIBUTES
TABLE t1:DOUBLECLICK=arrayselect;
--GROUP dir:text="directory",GRIDCHILDRENINPARENT;
--GROUP gfile:text="Selected File",GRIDCHILDRENINPARENT;
LABEL lfd:text="Directory:";
path = FORMONLY.currpath,SCROLL,comment="Input the path";
--BUTTON ip : input_path,text="&Input";
BUTTON bu : move_up,image="uplevel",comment="Moves one directory up";
IMAGE ei = FORMONLY.eimage;
entry = FORMONLY.entry, TITLE="Name";
esize = FORMONLY.esize, TITLE="Size", JUSTIFY = RIGHT;
emodt = FORMONLY.emodt, TITLE="Time";
etype = FORMONLY.etype, TITLE="Type";
LABEL lfn=FORMONLY.lfn;--TEXT="File:"
LABEL lft:TEXT="Files of type:";
file = FORMONLY.filename,SCROLL;
COMBOBOX ftype = FORMONLY.ftype,SCROLL,sizepolicy=DYNAMIC,NOT NULL;
--BUTTON if : input_file,text="&Input",comment="Input the file name";
BUTTON open:accept,text="Open";
BUTTON canc:cancel,text="Cancel";
END

INSTRUCTIONS
SCREEN RECORD sr(
   FORMONLY.eimage,
   FORMONLY.entry,
   FORMONLY.esize,
   FORMONLY.emodt,
   FORMONLY.etype
);
END

